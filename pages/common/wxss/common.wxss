.index {
  width: 100%;
  height: 100%;
}
.index-hd {
  padding: 80rpx;
  text-align: center;
}
.index-bd {
  padding: 0 30rpx 40rpx;
}

.common-list-item {
  margin: 20rpx 0;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.common-list-item-left{
  padding: 20rpx;
  width: 10%;
}

.common-list-item-left-order{
  font-weight: bold;
}

.common-list-item-right {
  padding: 20rpx;
  display: flex;
  align-items: flex-start;
  transition: opacity .3s;
}

.common-list-item:first-child {
  margin-top: 0;
}
.common-list-text-const{
  font-weight: bold;
}
.common-list-text-var{
  flex: 1;
}
.common-list-img {
  width: 60rpx;
  height: 60rpx;
}

.common-empty {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.page-indicator{
  width: 100%;
  height: 50rpx;
  position: relative;
  margin: 0rpx 0rpx 10rpx 0rpx;
}

.page-indicator-image {
  width: 100%;
  height: 50rpx;
}

.page-indicator-item{
  width: 100%;
  height: 50rpx;
  position: absolute;
  left:0px;
  right: 0px;
  top:0px;
  bottom: 0px;
  display: flex;
  justify-content: center;
}

.divider-line{
  margin: 5rpx 20rpx 0rpx 5rpx;
  height:1rpx;
  border:none;
  border-top:2rpx dashed #b3b3b3;
}
