<view class='UCenter-bg'>
  <view wx:if="{{avatarUrl}}" class="cu-avatar xl round" style="background-image:url({{avatarUrl}});"></view>
  <view class='margin-top-sm text-xl'>{{nickName}}</view>
</view>
<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
  <view class="cu-item arrow">
    <view class='content' bindtap="showQrcode">
      <text class='icon-link text-red'></text>
      <text class='text-grey'>好文阅读</text>
    </view>
  </view>
  <view class="cu-item arrow">
    <view class='content' bindtap="showQrcode">
      <text class='icon-friendfavor text-red'></text>
      <text class='text-grey'>我关心的病人</text>
    </view>
  </view>
  <view class="cu-item arrow">
    <view class='content' bindtap="showQrcode">
      <text class='icon-favor text-red'></text>
      <text class='text-grey'>特别关注的病历</text>
    </view>
  </view>
  <view class="cu-item arrow">
    <view class='content' bindtap="showQrcode">
      <text class='icon-appreciate text-red'></text>
      <text class='text-grey'>众师兄分享</text>
    </view>
  </view>
  <view class="cu-item arrow">
    <view class='content' bindtap="showQrcode">
      <text class='icon-info text-red'></text>
      <text class='text-grey'>关于</text>
    </view>
  </view>

</view>