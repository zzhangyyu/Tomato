@import "/pages/common/wxss/common.wxss";

/* 搜索框样式 */
.search{
  display: flex;
  margin: 10rpx 0 10rpx 0;
  justify-content: center;
}
.search_arr {
  display: flex;
  width: 70%;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  align-items: center;
}
.search_arr input{
  margin-left: 30rpx;
  height: 10rpx;
}
.search-icon {
  margin-left: 10rpx;
}
.search-text {
  margin-left: 15rpx;
  width: 15%;
  line-height: 150%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}
/* 右侧导航样式 */
.nav {
  position: fixed;
  right: 0rpx;
  top: 10%;
  font-family: Arial, Helvetica, sans-serif;
}
.letter {
  display: flex;
  width: 35rpx;
  height: 35rpx;
  font-size: 20rpx;
}
.letter-text {
  display: inline-block;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 35rpx;
  border-radius: 50%;
}
.letter-actived {
  background-color: #ccc;
}